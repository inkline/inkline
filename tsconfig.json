{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib",
        "paths": {
            "@inkline/inkline/*": ["./src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom",
            "@types/node",
            "@types/jest",
            "@types/shelljs"
        ]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["dist", "lib", "package", "node_modules"]
}
