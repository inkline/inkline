{
    "extends": "../tooling/typescript-config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "types": [
            "vitest/globals"
        ],
        "paths": {
            "inkline": ["../inkline/src/index.ts"],
            "inkline/*": ["../inkline/src/*"],
            "@inkline/component-alert": ["../components/alert/src/index.ts"],
            "@inkline/component-alert/*": ["../components/alert/src/*"],
            "@inkline/component-badge": ["../components/badge/src/index.ts"],
            "@inkline/component-badge/*": ["../components/badge/src/*"],
            "@inkline/component-breadcrumb": ["../components/breadcrumb/src/index.ts"],
            "@inkline/component-breadcrumb/*": ["../components/breadcrumb/src/*"],
            "@inkline/component-button": ["../components/button/src/index.ts"],
            "@inkline/component-button/*": ["../components/button/src/*"],
            "@inkline/component-card": ["../components/card/src/index.ts"],
            "@inkline/component-card/*": ["../components/card/src/*"],
            "@inkline/component-loader": ["../components/loader/src/index.ts"],
            "@inkline/component-loader/*": ["../components/loader/src/*"],

        }
    },
    "include": [
        "src/**/*.ts",
        ".storybook/**/*.ts",
        "vite.config.ts",
        "inkline.config.ts"
    ]
}
