{
    "name": "@inkline/config",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "devtools watch",
        "build": "devtools build",
        "postbuild": "mv dist/index.js dist/config.js && mv dist/index.cjs dist/config.cjs",
        "lint": "devtools eslint",
        "test": "devtools test",
        "test:dev": "devtools test --watch",
        "test:ci": "devtools test --coverage"
    },
    "devDependencies": {
        "@inkline/devtools": "workspace:*",
        "@inkline/eslint-config": "workspace:*",
        "@types/node": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "eslint": "catalog:",
        "type-fest": "catalog:",
        "typescript": "catalog:",
        "vite": "catalog:",
        "vite-plugin-dts": "catalog:",
        "vitest": "catalog:"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/config.cjs",
    "module": "./dist/config.js",
    "types": "./dist/config.d.ts",
    "exports": {
        ".": {
            "import": "./dist/config.js",
            "require": "./dist/config.cjs",
            "types": "./dist/config.d.ts"
        }
    },
    "dependencies": {
        "@inkline/core": "workspace:*",
        "c12": "^1.11.2"
    }
}
