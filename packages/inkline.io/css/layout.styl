@require '~@inkline/inkline/css/config/index'

.layout-fixed-full-height
    position: fixed
    overflow-y: auto
    top: 0
    max-height: 100%
    max-height: 100vh

.table-of-contents
    width: 100%

#layout
    #layout-aside-left,
    #layout-aside-right
        flex: 1 1 auto
        box-sizing: border-box

    #layout-aside-left .layout-aside-children
        padding-right: (--spacer * 2)

    #layout-aside-right .layout-aside-children
        padding-left: (--spacer * 2)

    #layout-content
        margin: 0 auto
        max-width: 48rem


