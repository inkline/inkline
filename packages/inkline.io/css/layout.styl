@require '~@inkline/inkline/css/config/index'
@require '~@inkline/inkline/css/mixins/index'

.layout-fixed-full-height
    position: fixed
    overflow: auto
    top: 62px
    max-height: calc(100% - 62px)
    max-height: calc(100vh - 62px)

    scrollbar-width: none
    -ms-overflow-style: none
    &::-webkit-scrollbar
        width: 0
        height: 0

.table-of-contents
    width: 100%

#documentation-layout > .container > .row > .column > .layout > .layout-content
    margin: 62px auto 0;

#documentation-layout
    #layout-aside-left,
    #layout-aside-right
        width: 20rem
        flex: 1 1 auto
        box-sizing: border-box

    #layout-aside-left
        .layout-aside-children
            padding-right: (--spacer * 2)

        +-breakpoint-down(sm)
            position: fixed
            padding: --spacer
            top: 62px
            left: 0
            width: 16rem
            max-width: 100%
            border-right: 1px solid --colors['gray-30']
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.25)
            z-index: 1
            background-color: #ffffff

            .layout-aside-children
                padding: 0

            .layout-fixed-full-height
                position: relative
                display: block
                top: auto

                .site-navigation
                    padding-top: 0

    #layout-aside-right
        .layout-aside-children
            padding-left: (--spacer * 2)

        +-breakpoint-down(md)
            display: none

    .layout-content
        max-width: 48rem

        +-breakpoint-down(md)
            max-width: auto

