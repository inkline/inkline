@require '~@inkline/inkline/css/config/index'

.site-search
    .dropdown-menu
        max-height: 250px
        min-width: 300px
        overflow-y: auto;
        padding: 0 0 --spacer

        .category
            font-weight: bold;
            font-size: --font-size-sm
            padding: (--spacer / 2) --spacer
            border-top: 1px solid --colors['gray-30']
            border-bottom: 1px solid --colors['gray-30']

            &:first-child
                border-top: 0

        .item
            .title
            .title > span
                font-weight: bold
                display: inline-block

            .subtitle
            .subtitle > span
                display: inline-block

            .description
            .description > span
                display: block
                font-size: --font-size-sm
