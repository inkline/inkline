@require '~@inkline/inkline/css/config/index'

.site-search
    margin: 0 --spacer

    .menu
        width: 520px
        padding: 0

        > .body
            max-height: 250px
            overflow-y: auto;

        > .footer
            display: flex
            justify-content: flex-end
            padding: (--spacer / 2) --spacer
            border-top: 1px solid --colors['gray-30']

        .category
            position: sticky
            font-weight: bold
            font-size: --font-size-sm
            padding: (--spacer / 2) --spacer
            border-top: 1px solid --colors['gray-30']
            border-bottom: 1px solid --colors['gray-30']

            &:first-child
                border-top: 0

        .item
            .title
            .title > span
                font-weight: bold
                display: inline-block

            .subtitle
            .subtitle > span
                display: inline-block

            .description
            .description > span
                display: block
                font-size: --font-size-sm
