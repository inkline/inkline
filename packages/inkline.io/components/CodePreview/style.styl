@require '~@inkline/inkline/css/config/index'
@require '~@inkline/inkline/css/mixins/index'

.code-preview
    display: block
    position: relative
    padding: --spacer
    border-radius: --border-radius['md']
    border: 1px solid --colors['gray-20']

    +-breakpoint-down(xs)
        borde-radius: 0
        border-left: 0
        border-right: 0
        margin-left: -14px
        margin-right: -14px

    + .code-preview
        margin-top: --spacer

    > .header
        display: flex
        align-items: center
        justify-content: space-between
        margin-bottom: --spacer

        > .title
            font-weight: bold
            display: inline-block
            margin-right: --spacer

            code
                margin-left: (--spacer / 2)
                font-weight: normal

        > .tabs
            flex: 1 0 auto
            text-align: right

            > .link
                margin-left: --spacer

                +-breakpoint-down(md)
                    padding: 0.25rem 0.8rem
                    margin-left: (--spacer / 2)

            .tab
                > .icon
                    display: none

                > .title
                    display: block

                +-breakpoint-down(md)
                    > .icon
                        display: block

                    > .title
                        display: none

    &.-expanded
        padding-bottom: 0

        > .panels
            margin-left: -17px
            margin-right: -17px
            margin-bottom: -1px

    > .panels
        display: block
        position: relative

        .panel
            width: 100%

