@require '~@inkline/inkline/css/config/index'

.site-navigation
    display: block
    padding-top: (--spacer * 2.5)

    ol
        list-style: none
        padding: 0

        > li
            > span
                font-weight: bold
                color: --text-muted

            + li
                margin-top: --spacer


    ul
        list-style: none
        padding: 0
        margin-top: (--spacer / 2)
        margin-left: (--spacer / 2)

        > li
            margin: 0
            position: relative

            > a
                display: block
                padding-top: (--spacer / 3)
                padding-bottom: (--spacer / 3)
                padding-left: --spacer
                color: --body-color
                border-left: 1px solid --color-gray-20
                transition: color 0.3s ease, font-weight 0.3s ease, border 0.3s ease

                &.-active
                    color: --link-color
                    border-left: 1px solid --link-color

.site-search
    max-height: 250px
    min-width: 300px
    overflow-y: auto;
