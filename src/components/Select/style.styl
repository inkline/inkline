@import '../../css/config'
@import '../../css/mixins'
@import '../Input/css/_variables'
@import 'css/_mixins'

/**
 * Select
 */
.select
    width: 100%

    > .menu
        max-width: 100%
        width: 100%

    > .form-select
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        opacity: 0
        -webkit-appearance: menulist-button;

    > .form-input-group
        &::after
            display: inline-block
            position: absolute
            top: 50%
            right: --spacer
            margin-top: -8px
            width: 12px
            height: 6px
            z-index: 1

            content: --icon-caret-down
            -icon()

    &.-suffixed > .form-input-group::after
        right: --spacer * 4
