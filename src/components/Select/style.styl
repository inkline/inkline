@import '../../css/config'
@import '../../css/mixins'
@import '../Input/css/_variables'
@import 'css/_mixins'

/**
 * Select
 */
.select
    width: 100%

    > .menu
        max-width: 100%
        width: 100%

    > .form-select
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        opacity: 0
        -webkit-appearance: menulist-button;

    > .form-input-group
        &::after
            position: absolute
            right: --spacer
            top: 50%
            margin-top: -3px
            content: ""
            mask: url(--input-select-caret) no-repeat 50% 50%
            background-size: 100% 100%
            background: black
            display: inline-block
            width: 12px
            height: 6px
            z-index: 1

    &.-suffixed > .form-input-group::after
        right: --spacer * 4
