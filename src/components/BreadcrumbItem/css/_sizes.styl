//
// Breadcrumb sizes
// Add the required sizes to all breadcrumb variations
//
for size in (sm md lg)
    .breadcrumb.-{size}
        > .breadcrumb-item
            padding-left: --breadcrumb-item-padding[size]

            + .breadcrumb-item
                &::before
                    padding-right: --breadcrumb-item-padding[size]