@import '../../resources/css/config'
@import '../../resources/css/mixins'
@import '_variables'


.form-check.-custom.-checkbox
    for size in (sm md lg)
        &.-{size}
            .form-input-label
                &::after
                &::before
                    if --border-radius-enabled
                        border-radius: --form-check-checkbox-border-radius[size]

    input
        &:checked ~ .form-input-label::after
            background-image: url(--form-check-checkbox-icon)


if --border-radius-enabled
    .form-check.-custom.-checkbox
        @extend .form-check.-custom.-checkbox.-md
