//
// Card variants
// Add the required color variants to all card variations
//
for --variant-name, --variant in --variants['card']
    .card.-{--variant-name}
        color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)
        background-color: --variant['color']

        if --gradient-enabled and --variant['gradient']
            background-image: -linear-gradient(--variant['gradient'])

        > .body
            border-color: --variant['color']

        > .header
        > .footer
            background-color: --card-background-darken
            border-color: --variant['color']