//
// Button variants
// Add the required color variants to all button variations
//
for --variant-name, --variant in --variants['button']
    .button.-{--variant-name}
        color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)
        background-color: --variant['color']
        border-color: --variant['color']

        &:not(:disabled):not(.-disabled)
            &:hover
            &:focus
            &.-hovered
            &.-focused
                background-color: darken(--variant['color'], 2 * --button-darken-percentage-hover)
                border-color: darken(--variant['color'], --button-darken-percentage-hover)

            &:active
            &.-active
                background-color: darken(--variant['color'], 2.5 * --button-darken-percentage-hover)

                &:focus
                &.-focused
                    outline: 1px solid rgba(--variant['color'], 0.25)
                    outline-offset: 2px

        &.-outline
            background-color: transparent
            color: --variant['color']

            &:not(:disabled):not(.-disabled)
                &:hover
                &.-hovered
                &:focus
                &.-focused
                    color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)
                    background-color: darken(--variant['color'], --button-darken-percentage-hover)
                    border-color: darken(--variant['color'], --button-darken-percentage-hover)

        &.-link
            color: --variant['color']
            background-color: transparent
            border-color: transparent

            &:not(:disabled):not(.-disabled)
                &:hover
                &.-hovered
                &:focus
                &.-focused
                    color: darken(--variant['color'], 5%)
                    background-color: transparent
                    border-color: transparent