@import '../../css/config'
@import '../../css/mixins'
@import '../Navbar/css/_variables'
@import 'css/_variants'

/**
 * Navbar Items
 */
.navbar
    > .container > .row > .column > .items
        display: flex
        flex-wrap: wrap
        flex-grow: 1
        justify-content: space-between
        align-items: center

        @extend .navbar.-light > .container > .row > .column > .items

    &.-collapsed > .container > .row > .column > .items
        @extend .navbar.-light.-collapsed > .container > .row > .column > .items
