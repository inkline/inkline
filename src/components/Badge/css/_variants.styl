//
// Badge themes
// Add the required color variants to all badge variations
//
for --variant-name, --variant in --variants['badge']
    .badge.-{--variant-name}
        color: -text-color-by-luminance(--variant['color'], --variant-color-light, --variant-color-dark)
        background-color: --variant['color']

        a:hover &,
        a:focus &
            background-color: darken(--variant['color'], 10%)
