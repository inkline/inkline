//
// Variants
//
--badge-variants := (brand monochrome state)

--variants['badge'] = -add-variant(--badge-variants, { color: --color-groups, gradient: --gradient-groups })

.badge
    //
    // Badge variants
    //
    for --variant-name, --variant in --variants['badge']
        &.-{--variant-name}
            background-color: --variant['color']
            background-image: -linear-gradient(--variant['gradient'])

.badge
    @extend .badge.-light