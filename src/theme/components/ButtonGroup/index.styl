@import '../Button'

//
// Styles
//
.button-group
    box-shadow: --button-box-shadow

    .button
        box-shadow: none

        &:hover
        &.-hovered
        &:focus
        &.-focused
            box-shadow: --button-box-shadow-focus

        // Active state
        &:active
        &.-active
            box-shadow: --button-box-shadow-active, --button-box-shadow-active-inset

    // Button themes
    // Add the required color themes to all button variations
    for --variant-name, --variant in --variants['button']
        > .button.-{--variant-name}
            if --gradient-enabled and --variant['gradient']
                background-image: -linear-gradient(--variant['gradient'], to bottom)

        &:not(.-vertical) > .button.-{--variant-name}:not(:first-child)
            border-left-color: darken(--variant['color'], --button-darken-percentage-hover)
        &.-vertical > .button.-{--variant-name}:not(:first-child)
            border-top-color: darken(--variant['color'], --button-darken-percentage-hover)
