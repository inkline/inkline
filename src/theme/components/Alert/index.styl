//
// Variables
//
--alert-themes := (brand state)

--alert-box-shadow := --box-shadow[0] 0.5rem 0.5rem -0.5rem rgba(--colors['black'], 0.33)

//
// Themes
//
-add-theme(--themes, 'alert', --alert-themes)

//
// Styles
//
.alert
  box-shadow: --alert-box-shadow

  // Alert themes
  // Add the required color themes to all alert variations
  for --theme-name, --theme in --themes['alert']
    &.-{--theme-name}
      border-color: --theme['color']
      color: -text-color-by-luminance(--theme['color'], --theme-color-light, --theme-color-dark)
      background-color: --theme['color']
      if --gradient-enabled and --theme['gradient']
        background-image: -linear-gradient(--theme['gradient'])

      a
        color: -text-color-by-luminance(--theme['color'], --theme-color-light, --theme-color-dark)

      &.-faded
        border-color: mix(#ffffff, --theme['color'], 15%)
        color: darken(--theme['color'], 66%)
        a
          color: darken(--theme['color'], 66%)

        background-color: mix(#ffffff, --theme['color'], 75%)
        if --gradient-enabled and --theme['gradient']
          background-image: -linear-gradient((rgba(--theme['gradient'][0], 0.33) rgba(--theme['gradient'][1], 0.1)))