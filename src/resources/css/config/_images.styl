// Image thumbnails
//
--thumbnail-padding := --spacer / 2
--thumbnail-bg := --body-background
--thumbnail-border-width := --border-width
--thumbnail-border-color := --colors['gray-40']
--thumbnail-border-radius := --border-radius
--thumbnail-box-shadow := 0 1px 2px rgba(--colors['black'], 0.075)
--thumbnail-transition := all 0.2s ease-in-out

// Polaroid
//
--polaroid-padding := --spacer * 3


// Figures
//
--figure-caption-font-size := 90%
--figure-caption-color := --colors['gray-60']
