//
// Themes
//
// Generate color themes based on the --colors, --brand-colors and --social-colors
// variables for components. If the color group is in the list, Inkline will
// generate themes for the specified color group.
//

--theme-color-light := --colors['white']
--theme-color-dark := --colors['gray-80']

// Available component themes
//
--themes-background := (basic brand neutral social state)
--themes-button := (basic brand neutral social state)
--themes-border := (basic brand neutral state)
--themes-table := (basic brand neutral state)
--themes-text := (basic brand neutral social state)

// Initialize theme choice collection
//
--theme-choices := {
    background: --themes-background
    button: --themes-button
    border: --themes-border
    table: --themes-table
    text: --themes-text
}

// Set theme colors for each enabled component
//
--themes = {}
for --item, --item-theme-groups in --theme-choices
    --item-themes-gradient = {}
    --item-themes-color = {}
    --item-themes = {}

    for --item-theme in --item-theme-groups
        --item-themes-gradient = merge(--item-themes-gradient, lookup('--gradients-' + --item-theme))
        --item-themes-color = merge(--item-themes-color, lookup('--colors-' + --item-theme))

    for --item-theme-name, --item-theme-gradient in --item-themes-gradient
        --item-themes[--item-theme-name] = {
            gradient: --item-theme-gradient
            color: --item-themes-color[--item-theme-name]
        }

    --themes[--item] = --item-themes
