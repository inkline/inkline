/**
 * Tables
 */


table
.table
    width: 100%
    max-width: 100%
    margin-bottom: $spacer

    th,
    td
        padding: $table-cell-padding
        vertical-align: top
        border-top: $table-border-width solid transparent

    thead th
        vertical-align: bottom
        border-bottom-width: (2 * $table-border-width)

    tbody + tbody
        border-top: (2 * $table-border-width) solid transparent

    // Condensed table w/ half padding
    //
    &.-sm
        th
        td
            padding: $table-cell-padding-sm


    // Bordered version
    //
    // Add borders all around the table and between all the columns.
    //
    &.-bordered
        border: $table-border-width solid transparent

        th
        td
            border: $table-border-width solid $table-border-color


    // Themes
    //
    for $color-name, $color in $themes['table']
        $border-color = contrastColor($color, lighten($color, 12%), darken($color, 12%))
        $hover-color = contrastColor($color, lighten($color, 4%), darken($color, 10%))
        $stripe-color = contrastColor($color, lighten($color, 2%), darken($color, 5%))
        $text-color = contrastColor($color, $colors['white'], $colors['gray-900'])

        if $color-name == 'light'
            $hover-color = darken($color, 2%)
            $stripe-color = darken($color, 1%)


        &.-{$color-name}
            background: $color
            border-top-color: $border-color
            color: $text-color


            // Bordered table
            //
            // Add borders to all sides of the table and table cells
            //
            &.-bordered
                &
                th
                td
                    border-color: $border-color


            // Striped Table
            //
            // Default zebra-stripe styles (alternating gray and transparent backgrounds)
            //
            &.-striped
                > tr:nth-of-type(odd)
                tbody > tr:nth-of-type(odd)
                    background-color: $stripe-color


            // Hover table
            //
            // Placed here since it has to come after the potential zebra striping
            &.-hover tbody tr
                if $transition['tables']
                    transition: background-color $transition-duration ease
                &:hover
                    background-color: $hover-color


            // Responsive tables
            //
            // Generate series of `.table-responsive-*` classes for configuring the screen
            // size of where your table will overflow.

            &.-responsive
                for $breakpoint-name, $breakpoint-value in $breakpoints
                    $infix = breakpoint-infix($breakpoint-name)

                    &{$infix}
                        +breakpoint-down($breakpoint-name)
                            display: block
                            width: 100%
                            overflow-x: auto
                            -webkit-overflow-scrolling: touch
                            -ms-overflow-style: -ms-autohiding-scrollbar

                            // Prevent double border on horizontal scroll due to use of `display: block`
                            &.-bordered
                                border: none


            th
            td
            tbody + tbody
                border-top-color: $border-color

            thead th
                border-bottom-color: $border-color

            .table
                background-color: $color


table
.table
    @extend .table.-light
