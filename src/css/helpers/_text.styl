/**
 * Text
 */

._text-justify
    text-align: justify !important

// Responsive alignment
//
for --breakpoint-name, --breakpoint-value in --breakpoints
    --infix = -breakpoint-infix(--breakpoint-name)

    +-breakpoint(--breakpoint-name)
        ._text-left{--infix}
            text-align: left !important

        ._text-right{--infix}
            text-align: right !important

        ._text-center{--infix}
            text-align: center !important

        ._text-nowrap{--infix}
            white-space: nowrap !important

        ._text-truncate{--infix}
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap

// Transformation
//
._text-lowercase
    text-transform: lowercase !important

._text-uppercase
    text-transform: uppercase !important

._text-capitalize
    text-transform: capitalize !important


// Weight and italics
//
for --font-weight-name, --font-weight-value in --font-weight
  ._font-weight-{--font-weight-name}
    font-weight: --font-weight-value !important


._font-italic
  font-style: italic !important


._text-muted
  color: --text-muted !important

._text-hide
  text-indent: -10000px


// Font size
//
for --font-size-name, --font-size-value in --font-size
    ._font-size-{--font-size-name}
        font-size: --font-size-value