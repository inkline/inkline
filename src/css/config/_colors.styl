//
// Color Palette
//
// Basic, state and neutral colors
//

// Neutral Colors
//
--color-transparent := transparent
--color-white := #ffffff
--color-gray-10 := #f8f9fa
--color-gray-20 := #e9ecef
--color-gray-30 := #dee2e6
--color-gray-40 := #ced4da
--color-gray-50 := #adb5bd
--color-gray-60 := #868e96
--color-gray-70 := #495057
--color-gray-80 := #343a40
--color-gray-90 := #212529
--color-black := #000000

--colors-neutral := {
  transparent: --color-transparent
  white: --color-white
  gray-10: --color-gray-10
  gray-20: --color-gray-20
  gray-30: --color-gray-30
  gray-40: --color-gray-40
  gray-50: --color-gray-50
  gray-60: --color-gray-60
  gray-70: --color-gray-70
  gray-80: --color-gray-80
  gray-90: --color-gray-90
  black: --color-black
}

// Brand Colors
//
--color-primary := #3a88bc
--color-secondary := #702e6a
--color-light := #e9ecef
--color-dark := #212529

--colors-brand := {
  primary: --color-primary
  secondary: --color-secondary
  light: --color-light
  dark: --color-dark
}

// State Colors
//
--color-success := #4cb050
--color-danger := #ff5353
--color-warning := #ff9700
--color-info := #3dbff1

--colors-state := {
  success: --color-success
  danger: --color-danger
  warning: --color-warning
  info: --color-info
}

// Theme light and dark colors
//
--theme-color-light := #ffffff
--theme-color-dark := #343a40

// All Colors
//
--colors = merge(--colors-brand, --colors-state, --colors-neutral)
