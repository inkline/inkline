            "@inkline/component-radio*": [
                "../packages/ui/components/radio/src*"
            ],
            "@inkline/component-textarea*": [
                "../packages/ui/components/textarea/src*"
            ],
            "@inkline/component-toast*": [
                "../packages/ui/components/toast/src*"
            ],
            "@inkline/component-toggle*": [
                "../packages/ui/components/toggle/src*"
            ],
            "@inkline/component-tooltip*": [
                "../packages/ui/components/tooltip/src*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts",
        ".storybook/**/*.ts",
        "vite.config.ts",
        "inkline.config.ts"
