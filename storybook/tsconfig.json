{
    "extends": "../packages/tooling/typescript-config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "types": [
            "vitest/globals"
        ],
        "paths": {
            "inkline": [
                "../packages/inkline/src/index.ts"
            ],
            "inkline/*": [
                "../packages/inkline/src/*"
            ],
            "@inkline/component-*": [
                "../packages/components/*/src/index.ts"
            ],
            "@inkline/component-alert/*": [
                "../packages/components/alert/src/*"
            ],
            "@inkline/component-badge/*": [
                "../packages/components/badge/src/*"
            ],
            "@inkline/component-breadcrumb/*": [
                "../packages/components/breadcrumb/src/*"
            ],
            "@inkline/component-button/*": [
                "../packages/components/button/src/*"
            ],
            "@inkline/component-button-group/*": [
                "../packages/components/button-group/src/*"
            ],
            "@inkline/component-card/*": [
                "../packages/components/card/src/*"
            ],
            "@inkline/component-checkbox/*": [
                "../packages/components/checkbox/src/*"
            ],
            "@inkline/component-form-group/*": [
                "../packages/components/form-group/src/*"
            ],
            "@inkline/component-icon/*": [
                "../packages/components/icon/src/*"
            ],
            "@inkline/component-input/*": [
                "../packages/components/input/src/*"
            ],
            "@inkline/component-loader/*": [
                "../packages/components/loader/src/*"
            ],
            "@inkline/component-media/*": [
                "../packages/components/media/src/*"
            ],
            "@inkline/component-modal/*": [
                "../packages/components/modal/src/*"
            ],
            "@inkline/component-popover/*": [
                "../packages/components/popover/src/*"
            ],
            "@inkline/component-popup/*": [
                "../packages/components/popup/src/*"
            ],
            "@inkline/component-radio/*": [
                "../packages/components/radio/src/*"
            ],
            "@inkline/component-toast/*": [
                "../packages/components/toast/src/*"
            ],
            "@inkline/component-tooltip/*": [
                "../packages/components/tooltip/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        ".storybook/**/*.ts",
        "vite.config.ts",
        "inkline.config.ts"
    ]
}
